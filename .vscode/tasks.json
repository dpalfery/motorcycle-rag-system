{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Complete Push Workflow",
      "type": "shell",
      "command": "git",
      "args": ["add", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "dependsOrder": "sequence",
      "dependsOn": [
        "Git: Stage All Changes",
        "Git: Smart Commit",
        "Git: Push to Origin"
      ]
    },
    {
      "label": "Git: Stage All Changes",
      "type": "shell",
      "command": "git",
      "args": ["add", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Git: Smart Commit",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "$changes = git diff --cached --name-status; if ($changes) { $msg = 'Update: ' + ($changes | ForEach-Object { $_.Split()[1] } | Select-Object -First 3 | Join-String -Separator ', '); git commit -m \"$msg\" } else { echo 'No changes to commit' }"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": "Git: Stage All Changes"
    },
    {
      "label": "Git: Push to Origin",
      "type": "shell",
      "command": "git",
      "args": ["push", "origin"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Git: Status Check",
      "type": "shell",
      "command": "git",
      "args": ["status", "--porcelain"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
} 